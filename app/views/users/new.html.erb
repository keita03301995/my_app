<% provide(:title, 'Sign up') %>
<h1>とうろくぺーじ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      
      <%= f.label :name, "おなまえ" %>
      <%= f.text_field :name %>

      <%= f.label :email, "めーるあどれす" %>
      <%= f.email_field :email %>

      <%= f.label :password, "ぱすわーど" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "ぱすわーどかくにん" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "とうろく", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
